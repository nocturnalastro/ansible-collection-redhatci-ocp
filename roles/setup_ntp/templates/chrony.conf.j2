# {{ ansible_managed }}
stratumweight 0
driftfile /var/lib/chrony/drift
rtcsync
makestep 10 3
bindcmdaddress 127.0.0.1
bindcmdaddress ::1
keyfile /etc/chrony.keys
noclientlog
logchange 0.5
logdir /var/log/chrony
manual
local stratum 10
{% if ntp_server_allow %}
allow {{ ntp_server_allow }}
{% endif %}
{% for item in ntp_pool_servers %}
Server {{ item }}
{% endfor %}

